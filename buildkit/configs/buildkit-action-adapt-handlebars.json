{
  "actions": [
    {
      "@name": "plugins-handlebars",
      "@displayName": "Building plugin templates...",
      "@action": "handlebars",
      "@onlyOnSwitches": [
        "build"
      ],
      "@when": "build",
      "src": "src",
      "dest": "{{outputDest}}/{{course}}/templates.js",
      "paritalGlobs": [
        "**/partials/**"
      ],
      "globs": [
        "src/core/templates/*.hbs",
        "src/core/templates/**/*.hbs",
        "src/**/templates/*.hbs",
        "src/**/templates/**/*.hbs"
      ],
      "defines": "templates",
      "requires": {
        "Handlebars": "handlebars"
      },
      "context": "Handlebars.templates"
    }
  ]
}
