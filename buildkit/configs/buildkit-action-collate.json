{
  "actions": [
    {
      "@name": "plugins-required-folder",
      "@displayName": "Synching plugin required folders...",
      "@action": "collate",
      "@onlyOnSwitches": [
        "build"
      ],
      "@when": "clean",
      "on": "required",
      "src": "src",
      "globs": [
        "src/*/*/required/**"
      ],
      "diffGlobs": [
        "!{{dest}}/adapt/**",
        "!{{dest}}/adapt",
        "!{{dest}}/assets/**",
        "!{{dest}}/assets",
        "!{{dest}}/course/**",
        "!{{dest}}/course",
        "!{{dest}}/libraries/**",
        "!{{dest}}/libraries",
        "!{{dest}}/templates.js",
        "!{{dest}}/libraries.js",
        "!{{dest}}/plugins.js",
        "!{{dest}}/core.js",
        "!{{dest}}/libraries.js.map",
        "!{{dest}}/plugins.js.map",
        "!{{dest}}/core.js.map",
        "!{{dest}}/index.html",
        "**"
      ],
      "dest": "{{outputDest}}/{{course}}"
    },
    {
      "@name": "plugins-libraries-folders",
      "@displayName": "Synching plugin libraries folders...",
      "@action": "collate",
      "@onlyOnSwitches": [
        "build"
      ],
      "@onlyOnVersions": [
        ">=2.0.13"
      ],
      "@when": "clean",
      "on": "libraries",
      "src": "src",
      "globs": [
        "!**/libraries.js",
        "src/*/*/libraries/**"
      ],
      "diffGlobs": [
        "**"
      ],
      "dest": "{{outputDest}}/{{course}}/libraries/"
    },
    {
      "@name": "plugins-assets-folder",
      "@displayName": "Synching plugin asset folders...",
      "@action": "collate",
      "@onlyOnSwitches": [
        "build"
      ],
      "@when": "build",
      "on": "assets",
      "src": "src",
      "globs": [
        "src/components/*/assets/**",
        "src/extensions/*/assets/**",
        "src/menu/*/assets/**"
      ],
      "diffGlobs": [
        "**"
      ],
      "dest": "{{outputDest}}/{{course}}/assets"
    },
    {
      "@name": "plugins-fonts-folder",
      "@displayName": "Synching font folders...",
      "@action": "collate",
      "@onlyOnSwitches": [
        "build"
      ],
      "@when": "build",
      "on": "fonts",
      "src": "src",
      "globs": [
        "src/*/*/fonts/**"
      ],
      "diffGlobs": [
        "**"
      ],
      "dest": "{{outputDest}}/{{course}}/adapt/css/fonts"
    },
    {
      "@name": "theme-assets-folder",
      "@displayName": "Synching theme asset folders...",
      "@action": "collate",
      "@onlyOnSwitches": [
        "build"
      ],
      "@when": "build",
      "on": "assets",
      "src": "src",
      "globs": [
        "src/theme/*/assets/**"
      ],
      "diffGlobs": [
        "**"
      ],
      "dest": "{{outputDest}}/{{course}}/adapt/css/assets"
    }
  ]
}
