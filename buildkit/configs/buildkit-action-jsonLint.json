{
	"actions": [
		{
			"@name": "json-lint",
			"@displayName": "Linting json...",
			"@action": "jsonlint",
			"@onlyOnSwitches": [
                "build"
            ],
            "@excludeOnSwitches": [
                "quick"
            ],
            "@when": "prep",
			"@types": [ "builds/courses/course", "src/courses/course" ],
			"src": "{{outputDest}}/{{course}}/course",
			"globs": "**/*.{{fileextensions.json}}"
		},
		{
			"@name": "json-lint",
			"@displayName": "Linting json...",
			"@action": "jsonlint",
			"@onlyOnSwitches": [
                "build"
            ],
            "@excludeOnSwitches": [
                "quick"
            ],
            "@when": "prep",
			"@types": [ "src/course" ],
			"src": "{{outputDest}}/course",
			"globs": "**/*.{{fileextensions.json}}"
		}
	]
}