{
  "actions": [
    {
      "@name": "stringreplacement",
      "@displayName": "String replacement...",
      "@action": "stringreplacement",
      "@onlyOnSwitches": [
        "build"
      ],
      "@when": "finish",
      "@types": [
        "builds/courses/course",
        "src/courses/course"
      ],
      "src": "src",
      "globs": [
        "src/extensions/adapt-contrib-spoor/required/imsmanifest.xml"
      ],
      "dest": "{{outputDest}}/{{course}}/imsmanifest.xml",
      "contexts": {
        "config": "{{outputDest}}/{{course}}/course/config.{{fileextensions.json}}"
      },
      "context": "{{outputDest}}/{{course}}/course/{{config._defaultLanguage}}/course.{{fileextensions.json}}"
    },
    {
