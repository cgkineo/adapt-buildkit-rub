{
	"actions": [
		{
			"@name": "techspec",
			"@displayName": "Tech Spec checking...",
			"@action": "techspec",
            "@onlyOnSwitches": [
                "techspec"
            ],
            "@excludeOnSwitches": [
                "quick"
            ],
            "@when": "preFinish",
			"@types": [ "builds/courses/course", "src/courses/course" ],
			"src": "{{outputDest}}/{{course}}/course",
			"globs": [

				"**/*.ogv",
				"**/*.ogg"
			],
			"extensions": {
                "mp4": {
                    "size": 10240
                },
                "mp3": {
                    "size": 10240
                },
                "ogv": {
                    "size": 10240
                },
                "ogg": {
                    "size": 10240
                }
            },
            "logPath": "rub-techspec.log"
		},
		{
